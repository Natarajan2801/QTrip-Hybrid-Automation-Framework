<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="QTrip Hybrid Suite" parallel="tests" thread-count="2" verbose="2">

    <listeners>
        <listener class-name="com.qtrip.listeners.TestListener"/>
    </listeners>

        <test name="API Tests">
            <classes>
                <class name="com.qtrip.tests.api.AuthApiTest"/>
                <class name="com.qtrip.tests.api.SearchApiTest"/>
                <class name="com.qtrip.tests.api.BookingApiTest"/>
            </classes>
        </test>

    <test name="UI Tests">
        <classes>
            <class name="com.qtrip.tests.ui.AuthenticationTest"/>
            <class name="com.qtrip.tests.ui.SearchTest"/>
            <class name="com.qtrip.tests.ui.BookingFlowTest"/>
            <class name="com.qtrip.tests.ui.ReliabilityTest"/>
        </classes>
    </test>
</suite>